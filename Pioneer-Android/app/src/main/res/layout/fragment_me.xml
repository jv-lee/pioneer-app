<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorThemeBackground"
        tools:background="@color/colorThemeBackground"
        tools:context=".view.fragment.MeFragment">

        <com.lee.pioneer.view.widget.AppTitleBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backEnable="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:menuEnable="gone"
            app:titleText="@string/nav_me" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_item"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <com.lee.pioneer.view.widget.LineButtonView
                android:id="@+id/line_history"
                style="@style/CommendLineButtonView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemText="历史记录"
                app:leftDrawable="@drawable/vector_search" />

            <com.lee.pioneer.view.widget.LineButtonView
                android:id="@+id/line_favorite"
                style="@style/CommendLineButtonView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemText="我的收藏"
                app:leftDrawable="@drawable/vector_favorite" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>