<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/colorThemeBackground">

        <com.lee.library.widget.banner.MZBannerView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="160pt"
            app:layout_constraintTop_toTopOf="parent"
            app:open_mz_mode="false" />

        <RadioGroup
            android:id="@+id/group_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner">

            <RadioButton
                android:id="@+id/radio_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/vector_view"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/radio_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/vector_like"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/radio_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/vector_comment"
                android:button="@null"
                android:gravity="center" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>