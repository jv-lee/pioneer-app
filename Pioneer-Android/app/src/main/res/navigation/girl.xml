<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/girl"
    app:startDestination="@id/girlFragment">

    <fragment
        android:id="@+id/girlFragment"
        android:name="com.lee.pioneer.view.fragment.GirlFragment"
        android:label="@string/nav_girl"
        tools:layout="@layout/fragment_girl">
        <action
            android:id="@+id/action_girl_to_contentDetails"
            app:destination="@id/contentDetailsFragment"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/default_in_out"
            app:popEnterAnim="@anim/default_in_out"
            app:popExitAnim="@anim/slide_right_out" />
    </fragment>

    <fragment
        android:id="@+id/contentDetailsFragment"
        android:name="com.lee.pioneer.view.fragment.ContentDetailsFragment"
        android:label="contentDetails"
        tools:layout="@layout/fragment_content_details">

        <argument
            android:name="id"
            app:argType="string" />

        <argument
            android:name="url"
            app:argType="string" />

    </fragment>

</navigation>