<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.lee.pioneer.view.fragment.HomeFragment"
        android:label="@string/nav_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/contentDetails_action"
            app:destination="@id/contentDetailsFragment"
            app:enterAnim="@anim/slide_left_in"
            app:exitAnim="@anim/slide_right_out"
            app:popEnterAnim="@anim/slide_right_in"
            app:popExitAnim="@anim/slide_left_out"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/contentDetailsFragment"
        android:name="com.lee.pioneer.view.fragment.ContentDetailsFragment"
        android:label="contentDetails"
        tools:layout="@layout/fragment_content_details" >

    <argument
        android:name="id"
        app:argType="string"/>

    </fragment>

</navigation>