<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--魅族Banner-->
    <declare-styleable name="MZBannerView">
        <attr name="open_mz_mode" format="boolean" />
        <attr name="canLoop" format="boolean" />
        <attr name="indicatorPaddingLeft" format="dimension" />
        <attr name="indicatorPaddingRight" format="dimension" />
        <attr name="indicatorAlign">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <!--自定义跑马灯-->
    <declare-styleable name="MarqueeView">
        <attr name="left_drawable" format="reference" />
        <attr name="font_color" format="color" />
        <attr name="font_size" format="dimension" />
    </declare-styleable>

    <!--自定义条目更新提示控件-->
    <declare-styleable name="ItemNotificationView">
        <attr name="notification_text" format="string" />
        <attr name="notification_color" format="color" />
        <attr name="notification_text_color" format="color" />
        <attr name="notification_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="StatusLayout">
        <attr name="layout_loading" format="reference" />
        <attr name="layout_empty" format="reference" />
        <attr name="layout_error" format="reference" />
        <attr name="layout_network" format="reference" />
    </declare-styleable>

    <declare-styleable name="ImageViewRound">
        <attr name="layout_mode">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
            <enum name="oval" value="2" />
        </attr>
        <attr name="radius" format="float" />
    </declare-styleable>

</resources>