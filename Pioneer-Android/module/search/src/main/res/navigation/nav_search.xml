<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/search">

    <fragment
        android:id="@+id/search"
        android:name="com.lee.pioneer.search.view.fragment.SearchFragment"
        android:label="search"
        app:moduleName="search"
        tools:layout="@layout/fragment_search" >

        <action
            android:id="@+id/action_search_to_details"
            app:destination="@id/details"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/slide_default"
            app:popEnterAnim="@anim/slide_default"
            app:popExitAnim="@anim/slide_right_out" />

    </fragment>

    <include-dynamic
        android:id="@+id/details"
        app:graphResName="nav_details"
        app:moduleName="details" />

</navigation>